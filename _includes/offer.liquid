<article class="offer" id="{{ offer.id }}">
  <h3>
    {% if offer.offer_link %}
      <a href="{{ offer.offer_link }}" rel="external">{{ offer.name }}</a>
    {% else %}
      {{ offer.name }}
    {% endif %}
     <span>by {{ offer.provider }}</span>
  </h3>
  <p>{{ offer.description }}</p>
<details>
    <summary><h4>Details<span class="visuallyhidden"> for {{ offer.name }}</span></h4></summary>
    <div id="offer__features">
      <dl>
          <dt>Offer type</dt>
          <dd>{{ offer.offer_type }}</dd>
          <dt>Degree or certification</dt>
          <dd>{{ offer.degree_certification}}</dd>
          <dt>Prerequisites</dt>
          <dd>{{ offer.prerequisites}}</dd>
          <dt>Audience</dt>
          <dd>{{ offer.target_role}}</dd>
          <dt>Level</dt>
          <dd>{{ offer.level}}</dd>
          <dt>WAI Curricula module</dt>
          <dd><a href="{{ offer.curricula_link}}" rel="external">{{ offer.curricula_correspondence }}</a></dd>
          <dt>Topics</dt>
          <dd>{{ offer.keywords_topics}}</dd>
          <dt>Language</dt>
          <dd>{{ site.data.lang[offer.language].name}}</dd>
          <dt>Country</dt>
          <dd>{{ offer.country}}</dd>
          <dt>Format</dt>
          <dd>{{ offer.format}}</dd>
          <dt>Learning</dt>
          <dd>{{ offer.learning}}</dd>
          <dt>Platform</dt>
          <dd>{{ offer.platform}}</dd>
          <dt>Cost</dt>
          <dd>{{ offer.cost}}</dd>
          <dt>Duration</dt>
          <dd>{{ offer.duration}}</dd>
          <dt>Website</dt>
          <dd>{{ offer.offer_link}}</dd>
          <dt>Reviews page</dt>
          <dd>{{ offer.offer_link_reviews}}</dd>
        </dl>
        <p>This information was last updated on {{ offer.offer_info_last_update}}.</p>
        <p>This offer was last updated on {{ offer.offer_content_last_update}}.</p>
    </div>
  </details>
</article>
