<article class="tool" id="{{ offer.id }}">
  <h3>
    {% if offer.offer_link %}
      <a href="{{ offer.offer_link }}" rel="external">{{ offer.name }}</a>
    {% else %}
      {{ offer.name }}
    {% endif %}
     <span>by {{ offer.provider }}</span> <a href="#" class="tag">{{ offer.type_of_offer }}</a>
  </h3>
<details>
    <summary><h4>Details<span class="visuallyhidden"> for {{ offer.name }}</span></h4></summary>
    <div class="tool__features">
      <dl>
          <dt>Offer type</dt>
          <dd>{{ offer.offer_type }}</dd>
          <dt>Degree of certification</dt>
          <dd>{{ offer.degree_certification}}</dd>
        </dl>
    </div>
  </details>
</article>
