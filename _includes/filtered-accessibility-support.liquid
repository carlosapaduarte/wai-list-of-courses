<!-- 
data =     
"id_support": ["caption-audio", "material-ahead-of-time", "A captioned recording with transcript will be shared with attendees after the live event"] 
-->
{%- assign filteredItems = "" | split: "," -%}
{%- assign aGroups = site.data.accessibility-support | map: "options" -%}

{%- for aSubGroup in aGroups -%}
    {%- for aSupport in aSubGroup -%}
        {% if include.data contains aSupport.id %}
            {% assign aSupportAux = aSupportAux | push: aSupport.id %}
            {% assign aSupportAux = aSupportAux | push: aSupport.name %}
            {% assign filteredItems  = filteredItems | push: aSupportAux %}
        {% endif %}
        {%- assign newASubGroups = aSupport | map: "options" -%}
        {%- for newASubGroup in newASubGroups -%}
            {%- for newASupport in newASubGroup -%}
                {% if include.data contains newASupport.id %}
                    {% assign aSupportAux = aSupportAux | push: newASupport.id %}
                    {% assign aSupportAux = aSupportAux | push: newASupport.name %}
                    {% assign filteredItems  = filteredItems | push: aSupportAux %}
                {% endif %}
            {%- endfor -%}
        {%- endfor -%}
    {%- endfor -%}
{%- endfor -%}

{{ filteredItems | inspect }}